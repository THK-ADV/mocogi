
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET           /                                         controllers.HomeController.index

# Git Webhooks

POST          /webhook/onPushEvent                      controllers.GitWebhookController.onPushEvent()
POST          /webhook/onMergeEvent                     controllers.GitWebhookController.onMergeEvent()

# Core

GET           /locations                                controllers.core.LocationController.all()
POST          /locations                                controllers.core.LocationController.create()

GET           /languages                                controllers.core.LanguageController.all()
POST          /languages                                controllers.core.LanguageController.create()

GET           /status                                   controllers.core.StatusController.all()
POST          /status                                   controllers.core.StatusController.create()

GET           /assessmentMethods                        controllers.core.AssessmentMethodController.all()
POST          /assessmentMethods                        controllers.core.AssessmentMethodController.create()

GET           /moduleTypes                              controllers.core.ModuleTypeController.all()
POST          /moduleTypes                              controllers.core.ModuleTypeController.create()

GET           /seasons                                  controllers.core.SeasonController.all()
POST          /seasons                                  controllers.core.SeasonController.create()

GET           /persons                                  controllers.core.PersonController.all()
POST          /persons                                  controllers.core.PersonController.create()

GET           /studyFormTypes                           controllers.core.StudyFormTypeController.all()
POST          /studyFormTypes                           controllers.core.StudyFormTypeController.create()

GET           /pos                                      controllers.core.POController.all()
POST          /pos                                      controllers.core.POController.create()

GET           /grades                                   controllers.core.GradeController.all()
POST          /grades                                   controllers.core.GradeController.create()

GET           /focusAreas                               controllers.core.FocusAreaController.all()
POST          /focusAreas                               controllers.core.FocusAreaController.create()

GET           /faculties                                controllers.core.FacultyController.all()
POST          /faculties                                controllers.core.FacultyController.create()

GET           /globalCriteria                           controllers.core.GlobalCriteriaController.all()
POST          /globalCriteria                           controllers.core.GlobalCriteriaController.create()

GET           /studyPrograms                            controllers.core.StudyProgramController.all()
POST          /studyPrograms                            controllers.core.StudyProgramController.create()

GET           /competences                              controllers.core.CompetenceController.all()
POST          /competences                              controllers.core.CompetenceController.create()

# Module Compendium

GET           /moduleCompendium                         controllers.ModuleCompendiumController.all()
GET           /moduleCompendium/:id/file                controllers.ModuleCompendiumController.getFile(id: java.util.UUID)
GET           /moduleCompendium/:id                     controllers.ModuleCompendiumController.get(id: java.util.UUID)

GET           /modules                                  controllers.ModuleController.allModules()
GET           /metadata                                 controllers.ModuleController.allModuleMetadata()

# Git Workflow

POST          /git/branch                               controllers.GitController.createBranch()
GET           /git/branch/:username                     controllers.GitController.branchForUser(username)
DELETE        /git/branch/:username                     controllers.GitController.deleteBranch(username)

POST          /moduleDrafts                             controllers.ModuleDraftController.addModuleDraft()
PUT           /moduleDrafts/:moduleId                   controllers.ModuleDraftController.updateModuleDraft(moduleId: java.util.UUID)
GET           /moduleDrafts/:branch                     controllers.ModuleDraftController.moduleDrafts(branch)
GET           /moduleDrafts/:branch/validate            controllers.ModuleDraftController.validate(branch)
PUT           /moduleDrafts/:branch/commit              controllers.ModuleDraftController.commit(branch)
DELETE        /moduleDrafts/:branch/revertCommit        controllers.ModuleDraftController.revertCommit(branch)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)

      